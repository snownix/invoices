<h1>Show Product</h1>

<%= if @live_action in [:edit] do %>
  <.modal return_to={Routes.admin_product_show_path(@socket, :show, @product)}>
    <.live_component
      module={SnownixWeb.Admin.ProductLive.FormComponent}
      id={@product.id}
      title={@page_title}
      action={@live_action}
      product={@product}
      return_to={Routes.admin_product_show_path(@socket, :show, @product)}
    />
  </.modal>
<% end %>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @product.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @product.description %>
  </li>

  <li>
    <strong>Price:</strong>
    <%= @product.price %>
  </li>

  <li>
    <strong>Tax per item:</strong>
    <%= @product.tax_per_item %>
  </li>

  <li>
    <strong>Currency:</strong>
    <%= @product.currency %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.admin_product_show_path(@socket, :edit, @product), class: "button" %></span> |
<span><%= live_redirect "Back", to: Routes.admin_product_index_path(@socket, :index) %></span>
