<h1>Show Category</h1>

<%= if @live_action in [:edit] do %>
  <.modal return_to={Routes.admin_category_show_path(@socket, :show, @category)}>
    <.live_component
      module={SnownixWeb.Admin.CategoryLive.FormComponent}
      id={@category.id}
      title={@page_title}
      action={@live_action}
      category={@category}
      return_to={Routes.admin_category_show_path(@socket, :show, @category)}
    />
  </.modal>
<% end %>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @category.name %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.admin_category_show_path(@socket, :edit, @category), class: "button" %></span> |
<span><%= live_redirect "Back", to: Routes.admin_category_index_path(@socket, :index) %></span>
